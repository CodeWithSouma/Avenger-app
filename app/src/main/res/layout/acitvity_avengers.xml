                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmailMarie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNameMarie"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imgMarie"
                android:text="marie@rogersindustries.com"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPhoneNumberMarie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmailMarie"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imgMarie"
                android:text="+91 2222255555"
                android:textColor="#000"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>